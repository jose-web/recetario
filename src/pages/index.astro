---
import Layout from "../layouts/Layout.astro";
import { recipes } from "../data/recipes";

const baseUrl = import.meta.env.BASE_URL;

// Obtener las últimas 6 recetas
const latestRecipes = recipes.slice(-6).reverse();
---

<Layout title="Recetario - Inicio">
  <!-- Hero Section -->
  <section
    class="text-center py-12 bg-gradient-to-br from-orange-100 to-red-100 rounded-2xl mb-12"
  >
    <h1 class="text-4xl md:text-6xl font-bold text-gray-800 mb-4">Recetario</h1>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      Descubre las mejores recetas. Las últimas {latestRecipes.length} recetas añadidas.
    </p>

    <!-- Buscador -->
    <div class="max-w-2xl mx-auto">
      <form action={baseUrl + "recetas"} method="GET" class="relative">
        <input
          type="text"
          name="search"
          placeholder="Buscar recetas..."
          class="w-full px-6 py-4 pr-14 text-lg border-2 border-orange-200 rounded-full focus:border-orange-400 focus:outline-none focus:ring-2 focus:ring-orange-200 bg-white shadow-lg"
        />
        <button
          type="submit"
          class="absolute right-2 top-1/2 transform -translate-y-1/2 w-10 h-10 bg-orange-500 hover:bg-orange-600 rounded-full flex items-center justify-center transition-colors focus:outline-none focus:ring-2 focus:ring-orange-200"
          aria-label="Buscar recetas"
        >
          <svg
            class="w-5 h-5 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
      </form>

      <!-- Enlace para ver todas las recetas -->
      <div class="mt-6">
        <a
          href={baseUrl + "recetas"}
          class="inline-flex items-center text-orange-600 hover:text-orange-700 font-medium"
        >
          Ver todas las recetas ({recipes.length})
          <svg
            class="w-4 h-4 ml-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Grid de Recetas -->
  <section class="recipes-grid">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-2">Últimas Recetas</h2>
      <p class="text-gray-600">
        Las recetas más recientes añadidas a nuestro recetario
      </p>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
      id="recipesContainer"
    >
      {
        latestRecipes.map((recipe) => (
          <article
            class="recipe-card bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
            data-difficulty={recipe.difficulty}
            data-tags={recipe.tags.join(" ")}
          >
            <div class="relative">
              <img
                src={recipe.image}
                alt={recipe.title}
                class="w-full h-48 object-cover recipe-image"
                loading="lazy"
                onerror={"this.src='" + baseUrl + "fallback-image.svg'"}
              />
              <div class="absolute top-4 right-4 z-10">
                <span
                  class={`difficulty-badge px-3 py-1 rounded-full text-sm font-medium shadow-lg backdrop-blur-sm ${
                    recipe.difficulty === "Fácil"
                      ? "difficulty-easy text-white"
                      : recipe.difficulty === "Intermedio"
                        ? "difficulty-medium text-white"
                        : "difficulty-hard text-white"
                  }`}
                >
                  {recipe.difficulty}
                </span>
              </div>
            </div>

            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-2">
                {recipe.title}
              </h3>
              <p class="text-gray-600 mb-4 line-clamp-2">
                {recipe.description}
              </p>

              <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span>{recipe.prepTime} min</span>
                </div>
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{recipe.servings} personas</span>
                </div>
              </div>

              <div class="flex flex-wrap gap-2 mb-4">
                {recipe.tags.slice(0, 3).map((tag) => (
                  <span class="px-2 py-1 bg-orange-100 text-orange-700 text-xs rounded-full">
                    #{tag}
                  </span>
                ))}
              </div>

              <a
                href={`${baseUrl}receta/${recipe.id}`}
                class="block w-full bg-orange-500 hover:bg-orange-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors"
              >
                Ver Receta
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .recipe-image-container {
    position: relative;
    overflow: hidden;
  }

  .recipe-image {
    transition: opacity 0.3s ease-in-out;
    position: relative;
    z-index: 1;
  }

  .recipe-fallback {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
  }

  .recipe-fallback.show {
    display: flex !important;
  }
</style>
