---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}
const baseUrl = import.meta.env.BASE_URL;

const { title, description = "Descubre las mejores recetas" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={baseUrl + "favicon.svg"} />
    <title>{title}</title>
    <base href={baseUrl} />
    <ViewTransitions />
  </head>
  <body class="bg-orange-50 min-h-screen flex flex-col">
    <header class="bg-white shadow-sm border-b border-orange-100">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a
            href={baseUrl}
            class="flex items-center space-x-2 text-orange-600 hover:text-orange-700 transition-colors"
          >
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
              ></path>
            </svg>
            <span class="text-xl font-bold">Recetario</span>
          </a>

          <div class="hidden md:flex items-center space-x-6">
            <a
              href={baseUrl}
              class="text-gray-700 hover:text-orange-600 transition-colors"
              >Inicio</a
            >
            <a
              href={baseUrl + "recetas"}
              class="text-gray-700 hover:text-orange-600 transition-colors"
              >Todas las Recetas</a
            >
          </div>
        </div>
      </nav>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <footer class="bg-white border-t border-orange-100 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center text-gray-600">
          <p>&copy; 2025 Recetario. Hecho con ❤️ y Astro.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
